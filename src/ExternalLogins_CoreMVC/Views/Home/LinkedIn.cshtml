@model ExternalLogins_CoreMVC.Models.LinkedInViewModel

<br />
<div class="form-horizontal">
    <p style="text-align:center;" class="text-info">
        You've successfully authenticated with <i><strong>@ViewBag.LoginProvider</strong></i>.<br />
        Please fill out the form below and click the Register button to finish
        logging in.
    </p>

    <div class="form-group">
        <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <img src="@Model.ImageUrl" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Id" value="@Model.Id" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FormattedName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="FormattedName" value="@Model.FormattedName" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="FirstName" value="@Model.FirstName" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="LastName" value="@Model.LastName" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Email" value="@Model.Email" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="col-md-2 control-label"></label>
        <div class="form-group" style="width:500px; float:left;">
            <div style="float:left;">
                <label asp-for="@Model.Location.CountryCode" class="col-md-2 control-label" style="width:150px;"></label>
                <input type="text" value="@Model.Location.CountryCode" readonly style="min-width:200px !important;; width:300px !important; float:right" />
            </div>
            <div style="float:left;">
                <label asp-for="@Model.Location.CountryName" class="col-md-2 control-label" style="width:150px;"></label>
                <input type="text" value="@Model.Location.CountryName" readonly style="min-width:200px !important; width:300px !important; float:right" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PublicProfileUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="PublicProfileUrl" value="@Model.PublicProfileUrl" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Headline" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Headline" value="@Model.Headline" readonly />
        </div>
    </div>

    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>*@
</div>