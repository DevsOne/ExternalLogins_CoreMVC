@model ExternalLogins_CoreMVC.Models.FacebookViewModel

<br />
<div class="form-horizontal">
    <p style="text-align:center;" class="text-info">
        You've successfully authenticated with <i><strong>@ViewBag.LoginProvider</strong></i>.<br />
        Please fill out the form below and click the Register button to finish
        logging in.
    </p>

    <div class="form-group">
        <label asp-for="ImageUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <img src="@Model.ImageUrl" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Name" value="@Model.Name" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="FirstName" value="@Model.FirstName" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="LastName" value="@Model.LastName" readonly style="text-transform: capitalize;" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Email" value="@Model.Email" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="BirthDate" value="@Model.BirthDate" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Link" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Link" value="@Model.Link" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Locale" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Locale" value="@Model.Locale" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="Gender" value="@Model.Gender" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RelationshipStatus" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="text" asp-for="RelationshipStatus" value="@Model.RelationshipStatus" readonly />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EducationDetails" class="col-md-2 control-label"></label>
        @foreach (var item in Model.EducationDetails)
        {
            <div class="form-group" style="width:500px; float:left;">
                <div style="float:left;">
                    <label asp-for="@item.Name" class="col-md-2 control-label" style="width:150px;"></label>
                    <input type="text" value="@item.Name" readonly style="min-width:200px !important;; width:300px !important; float:right"/>
                </div>
                <div style="float:left;">
                    <label asp-for="@item.SchoolType" class="col-md-2 control-label" style="width:150px;"></label>
                    <input type="text" value="@item.SchoolType" readonly style="min-width:200px !important; width:300px !important; float:right"/>
                </div>

            </div>
        }
    </div>

    @*<div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>*@
</div>